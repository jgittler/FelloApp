<div class="clock-wrap main-text text-center">
  <h1 class="title blue hidden-xs">Buy your glasses before its too late!</h1>
  <h3 class="title blue visible-xs">Buy your glasses before its too late!</h3>
  <br />
  <div class="row">
    <div class="col-md-6 col-md-offset-3 col-xs-12">
        <%= button_to "Order Now", "http://bit.ly/FelloEyewear", class: "full btn btn-lg btn-primary sharp buy", method: "get", target: "blank" %>
    </div>
  </div>
  <div class="container">
    <div class="col-xs-10 col-xs-offset-1 your-clock"></div>
  </div>

  <div class="row share icons main-text row-eq-height">
    <div class="col-sm-4 hidden-sm hidden-xs circle">
      <div class="card main-text">
        <h3>Watch Our Video</h3>
        <a href="http://bit.ly/FelloEyewear" title='Fello Eyewear Kickstarter'>
          <%= image_helper 'ks_play.png', alt: 'Fello Eyewear Kickstarter' %>
        </a>
        <h4>Take A Peek</h4>
      </div>
    </div>

    <div class="col-xs-12 col-md-4 bar">
      <h3 class="gray hidden-xs">We're Funded! Join the Cause!</h3>
      <h4 class="gray visible-xs">We're Funded! Join the Cause!</h4>
      <div class="progress">
        <div class="progress-bar" role="progressbar" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100" style="width: 100%;">
          <div class="progress-bar inner-bar" role="progressbar" aria-valuenow="34" aria-valuemin="0" aria-valuemax="34" style="width: 34%;">
            294%
          </div>
        </div>
      </div>
      <button class="btn btn-primary k-s col-md-4 col-md-offset-1 col-sm-5 col-sm-offset-0 count-widget col-xs-4 col-xs-offset-1" type="button">
        Backers <span class="badge">206</span>
      </button>
      <button class="btn btn-primary facebook col-md-4 col-md-offset-2 col-sm-5 col-sm-offset-2 count-widget col-xs-4 col-xs-offset-2" type="button">
        Shares <span class="badge">261</span>
      </button>
    </div>

    <div class="col-sm-4 hidden-sm hidden-xs circle">
      <div class="card main-text">
        <h3>Share On Facebook</h3>
        <a href="https://www.facebook.com/sharer/sharer.php?u=https://www.kickstarter.com/projects/1474929497/fello-eyewear-high-quality-polarized-affordable" title='Share Fello Eyewear on Facebook'>
          <%= image_helper 'facebook.svg', alt: 'Fello Eyewear Facebook' %>
        </a>
        <h4>Tell Your Friends</h4>
      </div>
    </div>
  </div>
</div>
