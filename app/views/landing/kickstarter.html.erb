    <div class='col-sm-4'>

      <%= render partial: 'carousel', locals: { one: fantom_one, two: fantom_two, pair: "#fantom" } %>

    </div>

    <div class='col-sm-4'>

      <%= render partial: 'carousel', locals: { one: heron_one, two: heron_two, pair: "#heron" } %>

