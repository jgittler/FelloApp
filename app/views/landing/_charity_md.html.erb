<div class="row top-row hidden-sm hidden-xs">
  <div class="col-md-3 pic-card" style="height: 400px;">
    <div class="smile-girl charity-pic">
    </div>
  </div>

  <div class="col-md-6 inner-row">
    <div class="row top-row">
      <div class="col-md-3 main-text blue-card text-center" style="height: 135px;">
        <%= image_helper "vosh.png" %>
      </div>

      <div class="col-md-9 main-text blue-card text-center second-col" style="height: 135px;">
        <div class="text">
          <h1 class="titles"><%= vosh_donate %></h1>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-md-12 main-text blue-card" style="height: 250px;">
        <div class="text">
          <h2><%= charity_text %></h2>
        </div>
      </div>
    </div>
  </div>

  <div class="col-md-3 pic-card" style="height: 400px;">
    <div class="thumbs-up charity-pic">
    </div>
  </div>
</div>

<div class="row hidden-sm hidden-xs">
  <div class="col-md-5 pic-card" style="height: 350px;">
    <div class="eye-exam charity-pic">
    </div>
  </div>

  <div class="col-md-3 inner-row">
    <div class="row top-row">
      <div class="col-md-12 pic-card" style="height: 235px;">
        <div class="eye-cover charity-pic">
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-md-12 main-text blue-card text-center" style="height: 100px;">
        <div class="text">
          <h2 class="titles"><%= vosh_video %>
        </div>
      </div>
    </div>
  </div>

  <div class="col-md-4 pic-card" style="height: 350px;">
    <div class="smile-gown charity-pic">
    </div>
  </div>
</div>

