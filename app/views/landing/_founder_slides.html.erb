<!-- FOR LARGE SCREENS -->
<div id="founders-carousel-lg" class="carousel slide founders" data-ride="carousel">
  <!-- Wrapper for slides -->
  <div class="carousel-inner main-text row" role="listbox">
    <div class="item active">
      <%= render partial: "founder_spotlight_lg", locals: { founder: @jonathan } %>
    </div>
    <div class="item">
      <%= render partial: "founder_spotlight_lg", locals: { founder: @sasha } %>
    </div>
    <div class="item">
      <%= render partial: "founder_spotlight_lg", locals: { founder: @jason } %>
    </div>
  </div>
  <!-- Controls -->
  <a class="left carousel-control" href="#founders-carousel-lg" role="button" data-slide="prev">
    <span class="fa fa-chevron-left blue" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="right carousel-control" href="#founders-carousel-lg" role="button" data-slide="next">
    <span class="fa fa-chevron-right blue" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>
