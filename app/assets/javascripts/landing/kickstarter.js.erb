$(document).ready(function() {
  var cobra = '<%= asset_path 'bpcobra.jpg' %>'
  var cobraHold = '<%= asset_path 'fello_tortoise_shell_sunglasses_side_view.jpg' %>'
  $(".cobra-fade").hover(function(){
    $(".cobra-fade img").stop().animate({ opacity: 0 }, 800);
    setTimeout(function() {
      if ($(".cobra-fade img").attr('src') == cobra) {
        $(".cobra-fade img").stop().animate({ opacity: 1 }, 800).attr('src', cobraHold);
      } else {
        $(".cobra-fade img").stop().animate({ opacity: 1 }, 800).attr('src', cobra);
      }
    }, 700);
  });

  var fantom = '<%= asset_path 'bpfantom.jpg' %>'
